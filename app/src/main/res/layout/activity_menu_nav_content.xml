<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_background"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mymusic.orvai.high_pitched_tone.MenuActivity"
    tools:showIn="@layout/activity_menu_nav_drawer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/menu_activity_help"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/youtube_btn"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:background="@drawable/radius7"
            android:scaleType="centerInside"
            android:src="@drawable/menu_activity_youtube" />

        <ImageButton
            android:id="@+id/board_btn"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius7"
            android:scaleType="centerInside"
            android:src="@drawable/menu_activity_board" />

        <ImageButton
            android:id="@+id/chatting_btn"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius7"
            android:scaleType="centerInside"
            android:src="@drawable/menu_activity_chatting" />

        <ImageButton
            android:id="@+id/microphone_btn"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius7"
            android:scaleType="centerInside"
            android:src="@drawable/menu_activity_microphone" />

        <ImageButton
            android:id="@+id/maps_btn"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius7"
            android:scaleType="centerInside"
            android:src="@drawable/menu_activity_maps" />

    </LinearLayout>

    <ImageView
        android:id="@+id/main_start_btn"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="@drawable/radius6"
        app:srcCompat="@drawable/menu_activity_start_btn" />

</LinearLayout>
