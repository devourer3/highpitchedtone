<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="5dp"
    android:background="@drawable/border3"
    android:orientation="vertical">

  <LinearLayout
      android:id="@+id/user_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="fill_vertical"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:layout_margin="1dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/list_item_rank_medal"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/high_pitch_challenge_activity_medal_gold_128" />

    <TextView
        android:id="@+id/list_item_rank_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:text="1위" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/list_item_rank_user_id"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginRight="5dp"
          android:layout_weight="1"
          android:gravity="center"
          android:text="유저 아이디"
          android:textSize="15dp" />

      <TextView
          android:id="@+id/list_item_rank_note"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginRight="5dp"
          android:layout_weight="1"
          android:gravity="center"
          android:text="유저 음계"
          android:textSize="13dp" />

      <TextView
          android:id="@+id/list_item_rank_score"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginRight="5dp"
          android:layout_weight="1"
          android:gravity="center"
          android:text="유저 총 점수"
          android:textSize="13dp" />

    </LinearLayout>

  </LinearLayout>

</android.support.constraint.ConstraintLayout>